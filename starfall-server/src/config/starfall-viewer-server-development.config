#################################################
### database connection settings in .env file ###
#################################################

# energy threshold to trigger alert
energyThreshold 0

# mapTileServerURL http://map-server:3002
# mapTileSetName "OpenMapTiles Satellite"
# mapTileSetID 55_med-res-world
# mapTileSetAttribution "© OpenMapTiles © OpenStreetMap contributors"

pointSourceColumnNames [
  field_1       "Field 1"
  field_2       "Field 2"
  field_3       "Field 3"
  field_4       "Field 4"
  field_5       "Field 5"
]

# The port and hostname for the server
appHostname   localhost
appPort       8443

# zmp publish and subscribe address
subConnection tcp://127.0.0.1:1236

# server log file
# logFile       /var/log/starfall/starfall-server.log
logFile       /opt/starfall/log/starfall-server.log

# server log level
logLevel      debug

# viewer log directory
# viewerLogDir  /var/log/starfall/starfall-viewer/
viewerLogDir  /opt/starfall/log/starfall-viewer/

# microservice status servers
statusServers [
  GlmTriggerGen tcp://glmtrigger:5668
]
# mock        tcp://127.0.0.1:6666
# mock2       tcp://127.0.0.1:6667
statusUpdateInterval  10
statusTimeoutDuration 12 